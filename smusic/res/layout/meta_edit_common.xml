            <TextView android:textSize="@dimen/winset_description_text_size" android:id="@id/guide_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/winset_description_margin" android:text="@string/meta_edit_guide" android:layout_marginStart="@dimen/winset_description_margin" android:layout_marginEnd="@dimen/winset_description_margin" />
