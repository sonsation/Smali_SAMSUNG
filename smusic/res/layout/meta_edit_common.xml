            <com.samsung.android.app.music.common.widget.ButtonEditTextView android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" app:hint="@string/title" app:nextImeFocus="@id/album" app:editTextId="@id/title_edit_text" />
