            <com.samsung.android.app.music.common.widget.ButtonEditTextView android:id="@id/disc_number" android:layout_width="fill_parent" android:layout_height="wrap_content" app:hint="@string/disc_number_text" app:inputType="number" app:maxLength="1" app:editTextId="@id/disc_number_edit_text" />
