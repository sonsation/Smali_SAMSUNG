            <TextView android:textSize="@dimen/edge_panel_help_text" android:textColor="@color/edge_panel_text" android:id="@id/artist_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAlignment="viewStart" />
            <TextView android:textSize="@dimen/edge_panel_help_text" android:textColor="@color/edge_panel_text" android:id="@id/artist_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_tracks" android:textAlignment="viewStart" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@id/album_container" android:background="@drawable/ripple_list" android:paddingTop="@dimen/edge_panel_help_artist_album_list_padding_top_bottom" android:paddingBottom="@dimen/edge_panel_help_artist_album_list_padding_top_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/edge_panel_help_text" android:textColor="@color/edge_panel_text" android:id="@id/album_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAlignment="viewStart" />
            <TextView android:textSize="@dimen/edge_panel_help_text" android:textColor="@color/edge_panel_text" android:id="@id/album_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_tracks" android:textAlignment="viewStart" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@id/station_container" android:background="@drawable/ripple_list" android:paddingTop="@dimen/edge_panel_help_artist_album_list_padding_top_bottom" android:paddingBottom="@dimen/edge_panel_help_artist_album_list_padding_top_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/edge_panel_help_text" android:textColor="@color/edge_panel_text" android:id="@id/station_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAlignment="viewStart" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>