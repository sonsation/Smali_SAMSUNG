        <com.samsung.android.app.music.milk.store.widget.NetworkImageView android:id="@id/song_image" android:layout_width="@dimen/milk_store_main_new_release_item_song_image_width" android:layout_height="@dimen/milk_store_main_new_release_item_song_image_height" android:scaleType="fitXY" />
        <ImageView android:id="@id/song_play" android:layout_width="@dimen/milk_store_main_new_release_item_song_play_width" android:layout_height="@dimen/milk_store_main_new_release_item_song_play_height" android:layout_marginRight="@dimen/milk_store_main_new_release_item_song_play_margin_right" android:layout_marginBottom="@dimen/milk_store_main_new_release_item_song_play_margin_bottom" android:src="@drawable/store_main_play_btn" android:scaleType="fitXY" android:layout_alignRight="@id/song_image" android:layout_alignBottom="@id/song_image" android:contentDescription="@string/milk_store_talkback_play_button" />
