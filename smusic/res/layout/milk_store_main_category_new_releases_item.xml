<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:addStatesFromChildren="true" android:layout_width="@dimen/milk_store_main_new_release_item_width" android:layout_height="@dimen/milk_store_main_new_release_item_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
