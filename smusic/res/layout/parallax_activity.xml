<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/base_blur_background_common" />
    <RelativeLayout android:id="@id/list_container" android:fitsSystemWindows="true" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@id/music_list" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="@dimen/mini_player_layout_height" />
        <LinearLayout android:orientation="vertical" android:id="@id/parallax_view" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@id/parallax_thumbnail_container" android:focusable="false" android:layout_width="fill_parent" android:layout_height="@dimen/parallax_thumbnail_view_height">
                <include android:layout_width="fill_parent" android:layout_height="fill_parent" layout="@layout/list_item_album_info_thumbnail" />
                <include layout="@layout/list_item_album_info_text" />
            </FrameLayout>
        </LinearLayout>
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <include layout="@layout/mini_player" />
            <ViewStub android:id="@id/bottom_bar_stub" android:layout="@layout/music_ui_bottom_bar_container" android:layout_width="fill_parent" android:layout_height="@dimen/mini_player_layout_height" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>