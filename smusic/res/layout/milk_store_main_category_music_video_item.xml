            <TextView android:textSize="12.0dip" android:textColor="#fffafafa" android:ellipsize="end" android:id="@id/artist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_below="@id/title_container" android:fontFamily="sans-serif-light" />
        </LinearLayout>
