<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_vertical|center" android:id="@id/background">
        <shape android:tint="@color/sesl_seekbar_control_color_normal" android:shape="rectangle">
            <size android:width="@dimen/sesl_seekbar_track_height" />
        </shape>
    </item>
    <item android:gravity="fill_vertical|center" android:id="@id/secondaryProgress">
        <scale android:scaleHeight="100%" android:scaleGravity="bottom">
            <shape android:tint="@color/sesl_seekbar_control_color_secondary" android:shape="rectangle">
                <size android:width="@dimen/sesl_seekbar_track_height" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill_vertical|center" android:id="@id/progress">
        <scale android:scaleHeight="100%" android:scaleGravity="bottom">
            <shape android:tint="@color/sesl_seekbar_control_color_activated" android:shape="rectangle">
                <size android:width="@dimen/sesl_seekbar_track_height" />
            </shape>
        </scale>
    </item>
</layer-list>